{
	"manifest_version": 3,
	"version": "0.2.0",
	"name": "OSM Tasking Manager Peek",

	"background": {
		"scripts": ["background.js"],
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["https://www.openstreetmap.org/*"],
			"js": ["changeset.js"]
		},
		{
			"matches": ["https://www.openstreetmap.org/*"],
			"js": ["init.js"],
			"run_at": "document_start"
		}
	],
	"web_accessible_resources": [
		{
			"matches": ["<all_urls>"],
			"resources": ["tm.js","svg/*"]
		}
	],

	"browser_specific_settings": {
		"gecko": {
			"id": "osm-tm-peek@antonkhorev.github.io"
		}
	}
}
